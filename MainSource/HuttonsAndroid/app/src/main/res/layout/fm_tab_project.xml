<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fm_tab_project_tv_new_launch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_new_lauch"
            android:textColor="@color/selector_text_orange"
            android:gravity="center"
            android:paddingTop="@dimen/common_space_double"
            android:paddingBottom="@dimen/common_space_double"
            android:background="@drawable/selector_tab_project_blue" />

        <TextView
            android:id="@+id/fm_tab_project_tv_new_overseas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/label_overseas"
            android:textColor="@color/selector_text_orange"
            android:gravity="center"
            android:paddingTop="@dimen/common_space_double"
            android:paddingBottom="@dimen/common_space_double"
            android:background="@drawable/selector_tab_project_blue" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fm_tab_project_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>